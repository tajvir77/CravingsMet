@model ShoppingCartMVC.Models.viewallproduct


<div class="container">

    <div class="row">
        <div class="col-lg-6">
            <img src="~/Uploads/@Model.Image" style="height:250px;width:100%" />
        </div>

        <div class="col-lg-6">
             <h3>@Model.pro_categories</h3>
             <h2>@Model.pro_name</h2>
             <p>@Model.Description</p>
             <p>৳. <strong>@Model.Unit</strong></p>
            <input type="number" placeholder="enter qty" name="qty" />
            <input type="submit" value="Add to Cart" class="btn btn-warning" />
        </div>

    </div>

</div>
